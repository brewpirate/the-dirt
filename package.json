      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "json-server": "^0.17.0",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
